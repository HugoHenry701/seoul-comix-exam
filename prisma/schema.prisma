// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins","fullTextSearch", "fullTextIndex"]
}

model Restaurant {
  rating       Int?
  rating_count Int?
  category     String?
  city         String?
  desc         String?
  id           String   @id @default(uuid())
  images       String[]
  name         String?
  price_range  String?
  featuredId   String   @unique
  featured     Feature? @relation(fields: [featuredId], references: [id])
  isFavorite   Boolean  @default(false)
}

model Feature {
  id         String      @id @default(uuid())
  text       String?
  icon       String?
  Restaurant Restaurant?
}
